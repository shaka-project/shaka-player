requirement: {
  type: BANNED_NAME_CALL
  value: "TextDecoder"
  value: "window.TextDecoder"
  error_message:
    "Using \"TextDecoder\" directly is not allowed; "
    "because is not supported on Xbox and old browsers."
  whitelist_regexp: "lib/util/string_utils.js"
}

requirement: {
