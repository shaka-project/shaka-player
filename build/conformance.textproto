}
requirement: {
  type: BANNED_NAME
  value: "eval"
  error_message: "Using \"eval\" is not allowed"
  whitelist_regexp: "demo/demo_utils.js"
  whitelist_regexp: "node_modules/google-closure-library/closure/goog/base.js"
